{
  "type": "bonjson-test",
  "version": "1.0.0",
  "//": "Tests all five test types to verify the runner handles each correctly",
  "tests": [
    {
      "//": "42 encodes as small int: type_code = 42",
      "name": "encode_test",
      "type": "encode",
      "input": 42,
      "expected_bytes": "2a"
    },
    {
      "//": "0x2a decodes as small int: 42",
      "name": "decode_test",
      "type": "decode",
      "input_bytes": "2a",
      "expected_value": 42
    },
    {
      "name": "roundtrip_test",
      "type": "roundtrip",
      "input": "hello"
    },
    {
      "name": "encode_error_test",
      "type": "encode_error",
      "input": {"$number": "NaN"},
      "expected_error": "invalid_data"
    },
    {
      "//": "0xa9 is TYPE_SINT8 which expects 1 byte of data, but none provided",
      "name": "decode_error_test",
      "type": "decode_error",
      "input_bytes": "a9",
      "expected_error": "truncated"
    }
  ]
}
