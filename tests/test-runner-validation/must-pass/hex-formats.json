{
  "type": "bonjson-test",
  "version": "1.0.0",
  "//": "Tests various valid hex string formats",
  "tests": [
    {
      "//": "Lowercase hex without spaces (0x67 = 2-byte short string)",
      "name": "hex_lowercase_compact",
      "type": "decode",
      "input_bytes": "676865",
      "expected_value": "he"
    },
    {
      "//": "Uppercase hex without spaces (0x67 = 2-byte short string)",
      "name": "hex_uppercase_compact",
      "type": "decode",
      "input_bytes": "676865",
      "expected_value": "he"
    },
    {
      "//": "Mixed case hex (0x6a = 5-byte short string)",
      "name": "hex_mixed_case",
      "type": "decode",
      "input_bytes": "6a 68 65 6C 6c 6F",
      "expected_value": "hello"
    },
    {
      "//": "Hex with spaces (0x6a = 5-byte short string)",
      "name": "hex_with_spaces",
      "type": "decode",
      "input_bytes": "6a 68 65 6c 6c 6f",
      "expected_value": "hello"
    },
    {
      "//": "Hex with multiple spaces",
      "name": "hex_multiple_spaces",
      "type": "decode",
      "input_bytes": "6a  68  65  6c  6c  6f",
      "expected_value": "hello"
    },
    {
      "//": "Empty hex string (zero bytes)",
      "name": "hex_empty",
      "type": "decode_error",
      "input_bytes": "",
      "expected_error": "truncated"
    }
  ]
}
