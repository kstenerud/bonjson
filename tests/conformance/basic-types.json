{
  "type": "bonjson-test",
  "version": "1.0.0",
  "//": "Basic type encoding tests for null, boolean, and simple values",
  "tests": [
    {
      "//": "Null encodes to type code 0xb0",
      "name": "null",
      "type": "encode",
      "input": null,
      "expected_bytes": "b0"
    },
    {
      "//": "True encodes to type code 0xb2",
      "name": "bool_true",
      "type": "encode",
      "input": true,
      "expected_bytes": "b2"
    },
    {
      "//": "False encodes to type code 0xb1",
      "name": "bool_false",
      "type": "encode",
      "input": false,
      "expected_bytes": "b1"
    },
    {
      "//": "Empty array encodes to start (0xb3) + count chunk (0 elements → 0x00)",
      "name": "empty_array",
      "type": "encode",
      "input": [],
      "expected_bytes": "b3b5"
    },
    {
      "//": "Empty object encodes to start (0xb4) + count chunk (0 pairs → 0x00)",
      "name": "empty_object",
      "type": "encode",
      "input": {},
      "expected_bytes": "b4b5"
    },
    {
      "//": "Simple array with mixed types (3 elements → 0x0c)",
      "name": "array_mixed",
      "type": "encode",
      "input": [
        1,
        "x",
        null
      ],
      "expected_bytes": "b3016678b0b5"
    },
    {
      "//": "Object with single key-value pair (1 pair → 0x04)",
      "name": "object_single_key",
      "type": "encode",
      "input": {
        "a": 1
      },
      "expected_bytes": "b4666101b5"
    },
    {
      "//": "Object with multiple keys (key order is implementation-defined)",
      "name": "object_multiple_keys",
      "type": "roundtrip",
      "input": {
        "b": 0,
        "test": "x"
      }
    },
    {
      "//": "Null round-trips correctly",
      "name": "roundtrip_null",
      "type": "roundtrip",
      "input": null
    },
    {
      "//": "Boolean true round-trips correctly",
      "name": "roundtrip_bool_true",
      "type": "roundtrip",
      "input": true
    },
    {
      "//": "Boolean false round-trips correctly",
      "name": "roundtrip_bool_false",
      "type": "roundtrip",
      "input": false
    },
    {
      "//": "Empty array round-trips correctly",
      "name": "roundtrip_empty_array",
      "type": "roundtrip",
      "input": []
    },
    {
      "//": "Empty object round-trips correctly",
      "name": "roundtrip_empty_object",
      "type": "roundtrip",
      "input": {}
    }
  ]
}
