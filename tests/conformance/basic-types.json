{
  "type": "bonjson-test",
  "version": "1.0.0",
  "//": "Basic type encoding tests for null, boolean, and simple values",
  "tests": [
    {
      "//": "Null encodes to type code 0xb3",
      "name": "null",
      "type": "encode",
      "input": null,
      "expected_bytes": "b3"
    },
    {
      "//": "True encodes to type code 0xb5",
      "name": "bool_true",
      "type": "encode",
      "input": true,
      "expected_bytes": "b5"
    },
    {
      "//": "False encodes to type code 0xb4",
      "name": "bool_false",
      "type": "encode",
      "input": false,
      "expected_bytes": "b4"
    },
    {
      "//": "Empty array encodes to array (0xb7) + end (0xb6)",
      "name": "empty_array",
      "type": "encode",
      "input": [],
      "expected_bytes": "b7b6"
    },
    {
      "//": "Empty object encodes to object (0xb8) + end (0xb6)",
      "name": "empty_object",
      "type": "encode",
      "input": {},
      "expected_bytes": "b8b6"
    },
    {
      "//": "Simple array with mixed types",
      "name": "array_mixed",
      "type": "encode",
      "input": [
        1,
        "x",
        null
      ],
      "expected_bytes": "b7016678b3b6"
    },
    {
      "//": "Object with single key-value pair",
      "name": "object_single_key",
      "type": "encode",
      "input": {
        "a": 1
      },
      "expected_bytes": "b8666101b6"
    },
    {
      "//": "Object with multiple keys (key order is implementation-defined)",
      "name": "object_multiple_keys",
      "type": "roundtrip",
      "input": {
        "b": 0,
        "test": "x"
      }
    },
    {
      "//": "Null round-trips correctly",
      "name": "roundtrip_null",
      "type": "roundtrip",
      "input": null
    },
    {
      "//": "Boolean true round-trips correctly",
      "name": "roundtrip_bool_true",
      "type": "roundtrip",
      "input": true
    },
    {
      "//": "Boolean false round-trips correctly",
      "name": "roundtrip_bool_false",
      "type": "roundtrip",
      "input": false
    },
    {
      "//": "Empty array round-trips correctly",
      "name": "roundtrip_empty_array",
      "type": "roundtrip",
      "input": []
    },
    {
      "//": "Empty object round-trips correctly",
      "name": "roundtrip_empty_object",
      "type": "roundtrip",
      "input": {}
    }
  ]
}
