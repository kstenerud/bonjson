{
  "type": "bonjson-test",
  "version": "1.0.0",
  "//": "BigNumber encoding tests for values that cannot be represented as IEEE 754 floats",
  "tests": [
    {
      "//": "Integer larger than uint64 max (requires BigNumber)",
      "name": "bignumber_larger_than_uint64",
      "type": "roundtrip",
      "input": {"$number": "18446744073709551616"}
    },
    {
      "//": "Very large integer (100 digits)",
      "name": "bignumber_100_digit_integer",
      "type": "roundtrip",
      "input": {"$number": "1234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890"}
    },
    {
      "//": "High precision decimal (30 significant digits)",
      "name": "bignumber_high_precision",
      "type": "roundtrip",
      "input": {"$number": "1.23456789012345678901234567890"}
    },
    {
      "//": "Exponent beyond float64 range (max ~308)",
      "name": "bignumber_huge_exponent",
      "type": "roundtrip",
      "input": {"$number": "1e1000"}
    },
    {
      "//": "Very small exponent beyond float64 range",
      "name": "bignumber_tiny_exponent",
      "type": "roundtrip",
      "input": {"$number": "1e-1000"}
    },
    {
      "//": "Negative very large integer",
      "name": "bignumber_negative_large",
      "type": "roundtrip",
      "input": {"$number": "-99999999999999999999999999999999"}
    },
    {
      "//": "High precision with large exponent",
      "name": "bignumber_precision_and_exponent",
      "type": "roundtrip",
      "input": {"$number": "1.234567890123456789e500"}
    }
  ]
}
